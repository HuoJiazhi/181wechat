#line_num_list {
  height: 100%;
}

.myQueuePage {
  background-color: #fff;
}

.queueItem {
  width: 100%;
  height: 5rem;
  line-height: 1.5rem;
  background: #fff;
  margin: 0.2rem 0;
  margin-bottom: 0.8rem;
  border-bottom: 1px solid #bbbec4;
  box-shadow: 1px 1px 1px 1px #bbbec4;
}
.queueInfo {
    width: 66%;
    padding: 0.1rem 0.1rem;
    height: 100%;
    margin: 0;
}
.queueNum {
  width: 33%;
  display: flex;
  justify-content: center;
  background: #f3f3f3;
  height: 100%;
}

.queueOneNum {
  font-size: 30px;
  color: #e1192d;
  font-weight: bold;
  position: absolute;
  padding: 1.5rem 0;
}


.queueInfo .tableType {
  font-size: 15px;
}

.noQueue {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  text-align: center;
  font-size: 14px;
  padding: 230px 0;
  overflow: hidden;
}

.waiting {
  color: red;
  font-size: 20px;
  font-weight: bold;
}
