/* pages/orderSystem.wxss */

.table {
  border: 0px solid darkgray;
}

.tr {
  width: 100%;
  height: 4rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #36f;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

#order_system {
  background-color: #eee;
}

.dish_type {
  position: fixed;
  overflow: auto;
  width: 30%;
  height: 94%;
  left: 0;
  background-color: #eee;
  color: #aaa;
}

.dish_type #dish_menu {
  background: transparent;
}

.dish_type .dishMenu .dishMenu_item {
  display: block;
  outline: 0;
  list-style: none;
  font-size: 14px;
  padding: 14px 24px;
  padding-right: 10px;
  position: relative;
  cursor: pointer;
  z-index: 1;
  transition: all 0.2s ease-in-out;
}

.dish_type .dishMenu .dishMenu_item .itemBadge {
  float: right;
  margin-top: 2px;
}

.dish_type #dish_menu #dish_menu_item {
  color: black;
  border-bottom: 1px solid #dddee1;
}

.dish_type #dish_menu #dish_menu_item:hover {
  background: #fff;
  border-right: 2px solid #2d8cf0;
  color: #2d8cf0;
}

.dish_item {
  position: fixed;
  width: 70%;
  height: 94%;
  right: 0;
  overflow-y: scroll;
}

.dish_item > ul {
  border-bottom: 1px solid #d9d9d9;
}

.dish_item > ul > li:first-child {
  padding: 6px;
  padding-left: 10px;
  font-size: 0.7rem;
  background-color: #dbdde5;
}

.dish_item > ul > li {
  padding: 0 0.5rem;
  border: 1px solid transparent;
}

.dish_item .foodTable {
  width: 100%;
  height: 100%;
}

.dish_item .foodTable .foodItem {
  border-top: 1px solid #dbdde5;
  border-bottom: 1px solid #dbdde5;
  width: 100%;
  height: 100%;
}

.foodTable .foodImg {
  position: relative;
  width: 52px;
  height: 50px;
  margin-left: 1rem;
}


.foodTable .dish_amount {
  /*width: 104px;*//*height: 74px;*/
  padding: 14px 0;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  line-height: 20px;
}



/*bottom*/

.buy {
  position: fixed;
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #eee;
  bottom: 0;
}

.buy span {
  font-size: 15px;
  padding-left: 20px;
  color: #ed3f14;
}

.foodTable .dish_name {
    font-size: 0.9rem;
    color: #666;
    line-height: 24px;
    padding-bottom: 1px;
}

.foodTable .dish_price {
    color: #E2273A;
    font-size: 0.7rem;
}
